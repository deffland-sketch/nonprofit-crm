# Copy this file to .env and fill in your values

# Secret key for session security (generate a random string for production)
SECRET_KEY=your-secret-key-here

# Database URL (defaults to SQLite if not set)
# For SQLite: sqlite:///crm.db
# For PostgreSQL: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///crm.db

# Environment (set to 'production' to enable HTTPS enforcement)
FLASK_ENV=development

# Email configuration for password reset
# For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@wacharters.org
